
<div class="settings__header task-list__header sticky">
    <h1 class="heading-primary ">
        {{heading}}
    </h1>
    <div class="logo hidden">
        <img src="/images/Logo.svg" alt="logo" class="logo__item">
    </div>
    <ul class="menu">
        <li class="menu__item">
            <a href="/task-list" class="menu__link icon-list"></a>
        </li>
        <li class="menu__item">
            <a href="/report" class="menu__link icon-statistics"></a>
        </li>
        <li class="menu__item">
            <a href="/settings" class="menu__link icon-settings active"></a>
        </li>
    </ul>
</div>
<section class="settings">
    <div class="settings__data">
        <ul class="sub-menu">
            <li class="sub-menu__item">
                <a href="/settings/pomodoros" class="sub-menu__link active pomodoros-view">
                    {{subMenu.linkPomodoros.linkText}}
                </a>
            </li>
            <li class="sub-menu__item">
                <a href="/settings/categories" class="sub-menu__link categories-view">
                    {{subMenu.linkCategories.linkText}}
                </a>
            </li>
        </ul>
        <div class="pomodoros-categories__wrapper">

            <!-- view current - setting->Categories, add class 'hidden'  to hide and delete on 82 line -->
            <div class="categories__wrapper hidden ">
                <div class="categories">
                    <p class="settings__sub-heading">
                        {{subMenu.linkCategories.subHeading}}
                    </p>
                    <ul class="categories__list">
                        <li class="categories__item">
                            <span class="categories__text">
                                {{subMenu.linkCategories.categories.categoryWorkTitle}}
                            </span>
                        </li>
                        <li class="categories__item">
                            <span class="categories__text">
                                {{subMenu.linkCategories.categories.categoryEducationTitle}}
                            </span>
                        </li>
                        <li class="categories__item">
                            <span class="categories__text">
                                {{subMenu.linkCategories.categories.categoryHobbyTitle}}
                            </span>
                        </li>
                        <li class="categories__item">
                            <span class="categories__text">
                                {{subMenu.linkCategories.categories.categorySportTitle}}
                            </span>
                        </li>
                        <li class="categories__item  ">
                            <span class="categories__text">
                                {{subMenu.linkCategories.categories.categoryOtherTitle}}
                            </span>
                        </li>
                    </ul>
                </div>
                <a href="/task-list" class="btn btn--primary">{{subMenu.linkCategories.buttonText}}</a>
            </div>
            <!-- delete 'hidden' to switch on tab setting->pomodoros  and add on 45 line -->
            <div class="pomodoros__wrapper ">
                <div class="pomodoros">
                    <p class="settings__sub-heading">
                        {{subMenu.linkPomodoros.subHeading}}
                    </p>
                    <div class="pomodoros__data-wrapper">
                        <div class="pomodoros__data">
                            <div class="pomodoros__item p-first">
                                <span class="pomodoros__category">
                                    {{subMenu.linkPomodoros.categories.categoryWork.title}}
                                </span>
                                <div id="voter" class="pomodoros__input voter4">
                                    <span class="icon-minus work-time__minus-step-value down"></span>
                                    <input class="work-time vote vote4" type="number" data-step="5" min="15"
                                        max="25">
                                    <span class="icon-add work-time__add-step-value up"></span>
                                </div>
                            </div>
                            <p class="pomodoros__input-info">
                                {{subMenu.linkPomodoros.categories.categoryWork.text}}
                                <span class="pomodoros__input-info--active">{{subMenu.linkPomodoros.categories.categoryWork.subText}}</span>
                            </p>
                        </div>
                        <div class="pomodoros__data">
                            <div class="pomodoros__item p-second">
                                <span class="pomodoros__category">
                                    {{subMenu.linkPomodoros.categories.categoryIteration.title}}
                                </span>
                                <div class="pomodoros__input ">
                                    <span class="icon-minus work-iteration__minus-step-value down"></span>
                                    <input class="work-iteration " type="number" data-step="1" min="2" max="5">
                                    <span class="icon-add work-iteration__add-step-value up"></span>
                                </div>
                            </div>
                            <p class="pomodoros__input-info">
                                {{subMenu.linkPomodoros.categories.categoryIteration.text}}
                                <span class="pomodoros__input-info--active">{{subMenu.linkPomodoros.categories.categoryIteration.subText}}</span>
                            </p>
                        </div>
                        <div class="pomodoros__data">
                            <div class="pomodoros__item p-third">
                                <span class="pomodoros__category">
                                    {{subMenu.linkPomodoros.categories.categoryShortBreak.title}}
                                </span>
                                <div id="voter2" class="pomodoros__input ">
                                    <span class="icon-minus  short-break__minus-step-value down"></span>
                                    <input class="short-break vote2" type="number" data-step="1" min="3" max="5">
                                    <span class="icon-add short-break__add-step-value up"></span>
                                </div>
                            </div>
                            <p class="pomodoros__input-info">
                                {{subMenu.linkPomodoros.categories.categoryShortBreak.text}}
                                <span class="pomodoros__input-info--active">{{subMenu.linkPomodoros.categories.categoryShortBreak.subText}}</span>
                            </p>
                        </div>
                        <div class="pomodoros__data">
                            <div class="pomodoros__item p-fourth">
                                <span class="pomodoros__category">
                                    {{subMenu.linkPomodoros.categories.categoryLongBreak.title}}
                                </span>

                                <div id="voter3" class="pomodoros__input ">
                                    <span class="icon-minus long-break__minus-step-value down"></span>
                                    <input class="long-break vote3" type="number" data-step="5" min="15" max="30">
                                    <span class="icon-add long-break__add-step-value up"></span>
                                </div>

                            </div>
                            <p class="pomodoros__input-info ">
                                {{subMenu.linkPomodoros.categories.categoryLongBreak.text}}
                                <span class="pomodoros__input-info--active">{{subMenu.linkPomodoros.categories.categoryLongBreak.subText}}</span>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="pomodoros__cycle">
                    <h3 class="pomodoros__cycle-heading">{{subMenu.linkPomodoros.cycleHeading}}</h3>
                    <div class="pomodoros__cycle-graph-top-row"></div>
                    <div class="pomodoros__cycle-graph"></div>
                    <div class="pomodoros__cycle-graph-down-row"></div>
                    <div class="pomodoros__btns">
                        <a href="/task-list" class="btn btn--primary">{{subMenu.linkPomodoros.buttons.btnPrimary}}</a>
                        <a href="/task-list" class="btn btn--secondary">{{subMenu.linkPomodoros.buttons.btnSecondary}}</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
